@{
    Layout = "_StudentLayout";
}

<div class="col-xl-6 col-lg-12" style="margin: auto;margin-top: 200px;width: 500px;">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Choose your exam</h3>
        </div>
        <div class="card-body">
            <form action="/Student/instructions" method="get">
                <div class="form-group">
                    <label class="form-label">Customize Select</label>
                    <select name="country" class="form-control form-select select2 " data-bs-placeholder="Select Country">
                        <option value="br">Brazil</option>
                        <option value="cz">Czech Republic</option>
                        <option value="de">Germany</option>
                        <option value="pl" selected>Poland</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="container-login100-form-btn">
                        <input value="Go to Exam Instructions" type="submit" class="login100-form-btn btn" style="background-color:#a1272d ;">

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>